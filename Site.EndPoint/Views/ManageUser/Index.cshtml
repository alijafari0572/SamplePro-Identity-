@model List<IndexUser_ViewModel>
@{
    int i = 0;
}

@TempData["Message"];

<table class="table table-bordered">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">نام کاربری</th>
            <th scope="col">ایمیل</th>
            <th scope="col">Roles</th>
            <th scope="col">Claim</th>
            <th scope="col">ویرایش کاربر</th>
            <th scope="col">حذف کاربر</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            i++;
            <tr>
                <th scope="row">@i</th>
                <td>@item.UserName</td>
                <td>@item.Email</td>
                <td>
                    <a asp-controller="ManageUser" asp-action="AddUserToRole" asp-route-id="@item.Id" class="btn btn-primary btn-lg active" role="button" aria-pressed="true">add</a>
                    <a asp-controller="ManageUser" asp-action="RemoveUserFromRole" asp-route-id="@item.Id" class="btn btn-danger btn-lg active" role="button" aria-pressed="true">Remove</a>

                </td>
                <td>
                    <a asp-controller="ManageUser" asp-action="AddUserClaim" asp-route-id="@item.Id" class="btn btn-primary btn-lg active" role="button" aria-pressed="true">add</a>
                    <a asp-controller="ManageUser" asp-action="RemoveUserClaim" asp-route-id="@item.Id" class="btn btn-danger btn-lg active" role="button" aria-pressed="true">Remove</a>

                </td>
                <td>
                    <a asp-controller="ManageUser" asp-action="EditUser" asp-route-id="@item.Id" class="btn btn-primary btn-lg active" role="button" aria-pressed="true">Edit</a>
                   </td>
                   <td>
                    <a asp-controller="ManageUser" asp-action="DeleteUser" asp-route-id="@item.Id" method="post" class="btn btn-danger btn-lg active" role="button" aria-pressed="true">Remove</a>

                </td>
            </tr>
        }
    </tbody>
</table>